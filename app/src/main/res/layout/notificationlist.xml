<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@drawable/button_border"
        android:orientation="vertical">

        <FrameLayout
            android:id="@+id/myfeed_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="18dp">


            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">

                <FrameLayout
                    android:id="@+id/frameLayout2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="0dp">

                </FrameLayout>

                <TextView
                    android:text="ยินดีด้วย! ร้านคุณได้รับอนุมัติแล้ว สามารถเปิดร้านได้ทันที"
                    android:layout_marginTop="25dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_alignLeft="@+id/frameLayout2"
                    android:layout_alignStart="@+id/frameLayout2"
                    android:id="@+id/txttitle"
                    android:textColor="@color/background_floating_material_dark" />

                <TextView
                    android:id="@+id/txt_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingBottom="5dp"
                    android:paddingRight="0dp"
                    android:text="9 Nov 2015 07:21"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textColor="#ff585858"
                    android:textSize="12dp"
                    android:layout_below="@+id/frameLayout2"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true" />

                <ImageView
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:src="@drawable/ic_check"
                    android:id="@+id/imageView2"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true" />
            </RelativeLayout>
        </FrameLayout>

    </LinearLayout>


</LinearLayout>